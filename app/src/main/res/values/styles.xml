<resources>
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Primary theme color of the app (sets background color of app bar) -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <!-- Background color of buttons in the app -->
            <item name="colorButtonNormal">@color/colorPrimary</item>
        </style>
        <style name="team_image">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:padding">@dimen/dp_8</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
            <item name="android:textColor">#ffffff</item>
            <item name="android:textStyle">bold</item>
            <item name="android:drawablePadding">@dimen/dp_16</item>

        </style>
        <style name="buttons">
            <item name="android:padding">@dimen/dp_1</item>
            <item name="android:minHeight">@dimen/dp_48</item>
            <item name="android:minWidth">@dimen/dp_48</item>
            <item name="android:layout_margin">4dp</item>
            <item name="android:background">@drawable/button_style</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
        </style>
        <style name="customeTextStyle">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_weight">1</item>
            <item name="android:gravity">center</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
            <item name="android:textColor">#ffffff</item>
            <item name="android:textStyle">bold</item>
        </style>
        <style name="imageTeamStyle">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:layout_height">match_parent</item>
        </style>
        <style name="columns_A_B">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:background">@drawable/border</item>
            <item name="android:orientation">vertical</item>
            <item name="android:layout_margin">@dimen/dp_8</item>
            <item name="android:padding">@dimen/dp_8</item>
        </style>
        <style name="button_and_text_layout_styling">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">horizontal</item>
        </style>
</resources>

